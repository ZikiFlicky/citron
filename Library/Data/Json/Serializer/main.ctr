Json on: '_internal_serialize:' do: {:obj
  ^obj toJSON.
}.

Json on: 'serialize:' do: {:obj
  ^obj toJSON.
}.

Nil on: 'toJSON' do: {
  ^'null'.
}.
Number on: 'toJSON' do: {
  ^me toString.
}.
String on: 'toJSON' do: {
  ^'"%s"' % [me escapeDoubleQuotes].
}.
Array on: 'toJSON' do: {
  ^'[%:L]' % [',', (me fmap: \:x x toJSON)].
}.
Boolean on: 'toJSON' do: {
  ^either: 'true' or: 'false'. 
}.
Map on: 'toJSON' do: {
  ^'{%:L}' % [',', (me kvlist: \:kv kv fmap: \:x x toJSON, join: ':')].
}.
Object on: 'toJSON' do: {
  thisBlock error: 'Cannot serialize object of type ' + me type.
}.
