os := (Shell call: 'uname').
file := Nil.

((os indexOf: 'Linux') > -1) ifTrue: {
	file := '/var/log/syslog'.
}.

((os indexOf: 'OpenBSD') > -1) ifTrue: {
	file := '/var/log/messages'.
}.

(file isNil) ifTrue: {
	Pen write: 'Unable to determine location of system log for test', brk.
	Program exit.
}.

key := '--Citron-->0'.
Program log: key.
str := (Shell tail: file).
((str indexOf: key) > -1) ifTrue: {
	Pen write: 'OK'.
}.

key := '--Citron-->1'.
Program warning: key.
str := (Shell tail: file).
((str indexOf: key) > -1) ifTrue: {
	Pen write: 'OK'.
}.

key := '--Citron-->2'.
Program error: key.
str := (Shell tail: file).
((str indexOf: key) > -1) ifTrue: {
	Pen write: 'OK'.
}.

key := '--Citron-->3'.
Program alert: key.
str := (Shell tail: file).
((str indexOf: key) > -1) ifTrue: {
	Pen write: 'OK'.
}.
